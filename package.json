{
  "name": "potchs-cool-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "run-p serve watch",
    "watch": "onchange -ik '**/*.js' -e 'bundle*.js' -- npm run build",
    "serve": "npx @potch/tinyserve -w .",
    "build": "run-s rollup minify gzip",
    "rollup": "npx rollup index.js --format es --file bundle.js",
    "minify": "npx terser --compress --mangle --module --ecma 2020 -o bundle.min.js -- bundle.js",
    "gzip": "gzip < bundle.min.js > bundle.min.js.gz && ls -lh *.js*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "rollup": "^4.3.0",
    "terser": "^5.23.0"
  }
}
